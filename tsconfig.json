  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
